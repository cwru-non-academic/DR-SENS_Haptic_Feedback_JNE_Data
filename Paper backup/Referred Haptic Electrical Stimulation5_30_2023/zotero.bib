	author = {Abdi, Elahe and Kulić, Dana and Croft, Elizabeth},
	month = dec,
	year = {2020},
	note = {Conference Name: IEEE Transactions on Biomedical Engineering},
	keywords = {Force and tactile feedback, Force feedback, Haptic interfaces, Haptics, Human-robot interaction, Medical interventions, Performance, Robot sensing systems, Sensing, Tactile sensors, User interface, User interfaces},
	pages = {3438--3451},
}

@incollection{bleuler_haptics_2014,
	address = {Cham},
	title = {Haptics in {Robotics}, {Man}–{Machine} {Interface} and {Neuroscience}},
