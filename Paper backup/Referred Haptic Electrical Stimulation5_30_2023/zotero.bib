@article{isakovic_electrotactile_2016,
	title = {Electrotactile feedback improves performance and facilitates learning in the routine grasping task},
	volume = {26},
	issn = {2037-7460, 2037-7452},
	url = {http://www.pagepressjournals.org/index.php/bam/article/view/6069},
