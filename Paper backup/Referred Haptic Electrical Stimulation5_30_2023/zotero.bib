	urldate = {2023-05-11},
	booktitle = {Pervasive {Haptics}: {Science}, {Design}, and {Application}},
	publisher = {Springer Japan},
	author = {Kajimoto, Hiroyuki},
	editor = {Kajimoto, Hiroyuki and Saga, Satoshi and Konyo, Masashi},
	year = {2016},
	doi = {10.1007/978-4-431-55772-2_5},
	keywords = {Activating function, Chronaxie, Electro-tactile display, Electrocutaneous, Rheobase, Strength-duration curve},
	pages = {79--96},
}

